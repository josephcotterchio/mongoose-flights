<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mongoose Flights</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />

</head>

<body>
    <h1>All Mongoose Flights</h2>
    <table>
        <thead>
            <tr>
                <th>Airline</th>
                <th>Flight Number</th>
                <th>Departs</th>
                <th>Departure Airport</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% flights.forEach(function(f) { %>
            <tr>
                <td><%= f.airline %></td>
                <td><%= f.flightNo %></td>
                <td><%= f.departs %></td>
                <td><%= f.airport %></td>
                <td><a href="/flights/<%= f._id %>">Details</a></td>
            </tr>
            <% }) %>
        </tbody>
    </table>
    <p><a href="/flights/new">Add new flight</a></p>
</body>

</html>